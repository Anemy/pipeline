{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    // "noEmit": false,
    "jsx": "react",
    "noEmit": false,
    // "outDir": "dist"
    "allowJs": true,
    "noImplicitThis": false // Added for the `modules` from compass-schema
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}